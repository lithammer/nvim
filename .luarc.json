{
    "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/refs/heads/master/setting/schema.json",
    "runtime": {
        "version": "LuaJIT"
    },
    "workspace": {
        "library": [
            "lua",
            "$VIMRUNTIME",
            "${3rd}/luv/library"
        ],
        "checkThirdParty": false
    },
    "format": {
        "enable": false
    },
    "hint": {
        "enable": true,
        "arrayIndex": "Disable"
    },
    "diagnostics": {
        "unusedLocalExclude": [
            "_*"
        ]
    },
    "diagnostics.globals": [
        "MiniClue",
        "MiniCmdline",
        "MiniCompletion",
        "MiniDeps",
        "MiniNotify",
        "MiniPick"
    ]
}
