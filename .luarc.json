{
    "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
    "runtime": {
        "version": "LuaJIT"
    },
    "format": {
        "enable": false
    },
    "hint": {
        "enable": true,
        "arrayIndex": "Disable",
    },
    "workspace": {
        "library": [
            "lua",
            "$VIMRUNTIME/lua"
        ]
    },
    "diagnostics": {
        "unusedLocalExclude": [
            "_*"
        ],
    },
    "diagnostics.globals": [
        "MiniDeps",
        "MiniNotify",
        "MiniPick"
    ]
}
